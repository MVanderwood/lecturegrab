<div class="col-md-4">
    <h2>Lectures</h2>
    <div class="home-page-slider"> 
        <% @lectures.each do |lecture| %>
            <a href="/lectures/<%= lecture.id %>">
              <div class="content-box box-default">
                  <h3 class="content-box-title"><%= lecture.title %></h3>
                  <p><%= lecture.content[0..150] %>...</p>
              </div>
            </a>
        <% end %>
    </div>
    <%= link_to "More lectures...", "/lectures" %>
</div>
<div class="col-md-4">
    <h2>Subjects</h2>
    <div class="home-page-slider"> 
        <% @subjects.each do |subject| %>
            <div class="content-box box-default">
                <h3><%= link_to subject.name, "/subjects/#{subject.id}" %></h3>
                <p><%= subject.description[0..150] %>...</p>
            </div>
        <% end %>
    </div>
    <%= link_to "More subjects...", "/subjects" %>
</div>
<div class="col-md-4">
    <h2>Discussions</h2>
    <% @discussions.each do |discussion| %>
        <h3><%= link_to discussion.title, "/discussions/#{discussion.id}" %></h3>
        <p><%= discussion.content[0..150] %>...</p>
    <% end %>
    <%= link_to "More discussions...", "/discussions" %>
</div>