<div class="panel panel-primary">
    <div class="panel-heading">Start a Discussion!</div>
    <div class="panel-body">
        <form role="form" action="/discussions/create" method="post">
          <div class="form-group">
            <label for="DiscussionTitle">Title</label>
            <input type="text" class="form-control" placeholder="Enter your discussion's title here" name="discussionTitle">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Content</label>
            <textarea class="form-control" rows="8" name="discussionContent"></textarea>
          </div>
          <button type="submit" class="btn btn-ar btn-primary">Submit</button>
        </form>
    </div>
</div>